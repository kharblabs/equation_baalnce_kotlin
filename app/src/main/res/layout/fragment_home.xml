                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"

                            android:gravity="center_vertical"
                            android:text="Limiting Reagent : "
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            tools:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:elevation="2sp"
                            tools:layout_editor_absoluteX="0dp">

                            <TextView
                                android:id="@+id/list_item"
                                android:layout_width="70sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"

                                android:gravity="center_vertical"
                                android:text="Molecule"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gramper"
                                android:layout_width="60sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"
                                android:gravity="center_vertical"
                                android:text="gm/mole"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/moles"
                                android:layout_width="40sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.15"

                                android:gravity="center_vertical"
                                android:text="Moles"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/moles2"
                                android:layout_width="40sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"

                                android:gravity="center_vertical"
                                android:text="@string/moles"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <com.lb.auto_fit_textview.AutoResizeTextView

                                android:layout_width="60sp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10sp"
                                android:layout_weight="0.25"
                                android:gravity="center_vertical"
                                android:paddingLeft="8sp"
                                android:paddingRight="8sp"
                                android:text="@string/taken"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/residueHeader"
                                android:layout_width="60sp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.25"
                                android:gravity="center_vertical"
                                android:paddingRight="8sp"
                                android:text="@string/resid"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="20dp"
                            android:text="@string/reactant"
                            android:textColor="@android:color/background_dark"
                            android:textSize="12sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/moleculeRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0dp"
                            android:layoutAnimation="@anim/layout_anim_fall_down"
                            android:paddingLeft="0dp"
                            android:paddingRight="10sp"
                            android:visibility="visible"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                            tools:layout_editor_absoluteX="8dp">


                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="@string/products"
                            android:textColor="@android:color/background_dark"
                            android:textSize="12sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/productRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0dp"
                            android:layoutAnimation="@anim/layout_anim_fall_down"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            app:layout_constraintTop_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="40sp"
                    android:text="@string/scroll_hint"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/productRecycler" />


            </LinearLayout>





    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
