<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExampleCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardBackgroundColor">@color/keyboard</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <style name="ExampleTextStyle">
        <item name="android:textSize">@dimen/example_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>

    </style>
    <style name="KeyButtonStyle">
        <item name="cornerFamilyTopLeft">@null</item>
        <item name="cornerFamilyTopRight">@null</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
    <style name="KeyStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/key_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/key_height</item>
        <item name="android:lines">1</item>
        <item name="android:onClick">keyClicked</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="LargeIconView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

</resources>